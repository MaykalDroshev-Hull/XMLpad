<Window x:Class="XMLpad.LoadingPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStyle="None" ResizeMode="NoResize"
        Title="LoadingPopup" Height="165" Width="200" x:Name="LoadingPopup" Background="#80000000">
    <Grid Width="200" Height="150" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Loading..." FontSize="20" FontWeight="Bold" Margin="10"/>
        <ProgressBar Grid.Row="1" IsIndeterminate="True" Margin="19,26,21,57"/>
    </Grid>
</Window>
